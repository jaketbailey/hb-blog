---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('projects')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="font-bitter bg-orange-400">
		<Header />
		<main class="w-full xl:w-3/5 pt-2 p-5 xl:p-7">
			<section class="border-black border-2 bg-violet-300 p-6 shadow-[8px_8px_0px_rgba(0,0,0,1)] w-full">
				<h1 class="font-hammersmith text-5xl w-full pb-2">Projects</h1>
				<ul class="flex flex-wrap justify-center gap-5 list-none">
					{posts.map((post) => (
						<li class="w-full lg:w-[48%] h-full border-2 border-black rounded-md bg-white hover:shadow-[8px_8px_0px_rgba(0,0,0,1)]">
							<div class="">
								<a href={`/projects/${post.slug}/`} class="block cursor-pointer transition-all duration-200 ease-in-out">
									<article class="w-full h-full">
										<figure class="w-full h-1/2 border-b-2 border-black">
											<img
												src={post.data.heroImage}
												alt="thumbnail"
												class="w-full h-full object-cover rounded-t-md mb-2.5"
											/>
										</figure>
										<div class="px-6 py-5 text-left h-full">
											<FormattedDate date={new Date(post.data.pubDate)} />
											<h1 class="text-[32px] mb-4 font-hammersmith text-black m-0 leading-none">{post.data.title}</h1>
											<p class="text-xs mb-4 text-clip line-clamp-4">{post.data.description}</p>
											<strong class="text-black">Read More</strong>
										</div>
									</article>
								</a>
							</div>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
