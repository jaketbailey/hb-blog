---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="font-bitter bg-orange-400">
		<Header />
		<main class="w-full xl:w-3/5 pt-2 p-5 xl:p-7">
			<section class="border-black border-2 bg-violet-300 p-6 shadow-[8px_8px_0px_rgba(0,0,0,1)] w-full">
				<h1 class="font-hammersmith text-xl xl:text-5xl w-full pb-2">Blog</h1>
				<ul class="flex flex-wrap justify-center gap-5 list-none">
					{posts.map((post) => (
						<li class="w-full lg:w-[48%] h-auto border-2 border-black rounded-md bg-white ">
							<div class="">
								<div class="block transition-all duration-200 ease-in-out">
									<article class="w-full h-full">
										<figure class="w-full h-1/2 border-b-2 border-black">
											<img
												src={post.data.heroImage}
												alt="thumbnail"
												class="w-full h-full object-cover rounded-t-md mb-2.5"
											/>
										</figure>
										<div class="px-6 py-5 text-left h-full text-lg">
											<h1 class="text-xl xl:text-[32px] font-hammersmith text-black m-0 p-0 leading-none">{post.data.title}</h1>
											<div class="text-sm p-0 m-0 text-gray-700 mb-2">
											 <FormattedDate date={new Date(post.data.pubDate)} />
											</div>
											<p class="text-xs xl:text-sm mb-4 text-clip text-black line-clamp-4">{post.data.description}</p>
											<div class="flex justify-end ">
                                                <a href={`/blog/${post.slug}/`} class="font-bitter font-bold text-black text-xs md:text-base cursor-pointer border-black border-2 p-2.5 bg-[#A6FAFF] hover:text-black hover:bg-[#79F7FF] hover:shadow-[2px_2px_0px_rgba(0,0,0,1)] active:bg-[#00E1EF]">
                                                    Read More
                                                </a>
                                            </div>
										</div>
									</article>
								</div>
							</div>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
