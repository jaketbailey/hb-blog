---
import FormattedDate from "./FormattedDate.astro";

const { post, index } = Astro.props;
---

<li class="w-full lg:w-[48%] h-auto border-2 border-black bg-white ">
	<div class="">
		<div class="block transition-all duration-200 ease-in-out">
			<article class="w-full h-full">
				<figure class="w-full h-1/2 border-b-2 border-black">
					<img
						src={post.image.filename}
						alt="thumbnail"
						class="w-full h-60 object-cover rounded-none"
					/>
				</figure>
				<div class="px-6 py-5 text-left h-full text-lg">
					<h1 class="text-xl xl:text-[32px] font-hammersmith text-black m-0 p-0 leading-none">{post.title}</h1>
					<div class="text-sm p-0 m-0 text-gray-700 mb-2">
					 <FormattedDate date={post.date} />
					</div>
					<p class="text-xs xl:text-sm mb-4 text-clip text-black line-clamp-4">{post.description}</p>
					<div class="flex justify-end ">
                    <a href={`/${post.slug}/`} class="font-bitter font-bold text-black text-xs md:text-base cursor-pointer border-black border-2 p-2.5 bg-[#A6FAFF] hover:text-black hover:bg-[#79F7FF] hover:shadow-[2px_2px_0px_rgba(0,0,0,1)] active:bg-[#00E1EF]">
                        Read More
                    </a>
                </div>
				</div>
			</article>
		</div>
	</div>
</li>
